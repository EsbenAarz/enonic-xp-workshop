<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Gallery</display-name>
  <config>
    <field-set name="info">
      <label>Info</label>
      <items>
        <input type="ContentSelector" name="imageFolder">
          <label>Image folder</label>
          <immutable>false</immutable>
          <indexed>true</indexed>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <relationship-type>system:reference</relationship-type>
            <allow-content-type>base:folder</allow-content-type>
          </config>
        </input>
      </items>
    </field-set>
  </config>
</part>