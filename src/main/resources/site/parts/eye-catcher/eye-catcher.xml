<part>
  <display-name>Eye Catcher</display-name>
  <config>
    <field-set name="info">
      <label>Info</label>
      <items>
        <input name="heading" type="TextLine">
          <label>Heading</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="image" type="ImageSelector">
          <label>Image</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="fullHeight" type="Checkbox">
          <label>Full height</label>
          <occurrences minimum="0" maximum="0"/>
        </input>
      </items>
    </field-set>
    <field-set name="link">
      <label>Link</label>
      <items>
        <inline mixin="link-url"/>
      </items>
    </field-set>
  </config>
</part>