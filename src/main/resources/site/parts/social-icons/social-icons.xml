<part>
  <display-name>Social icons</display-name>
  <config>
    <field-set name="links">
      <label>Social media links</label>
      <items>
        <input type="TextLine" name="facebook">
          <label>Facebook</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextLine" name="youtube">
          <label>Youtube</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextLine" name="instagram">
          <label>Instagram</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
  </config>
</part>